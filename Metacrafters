let nfts = [];

// This function will take in some values as parameters, create an NFT object using the parameters,
// and store it in the variable above.
function mintNFT(name, creator, value) {
    const nft = {
        name: name,
        creator: creator,
        value: value // Now represents value in USD
    };

    // Store the NFT in the nfts array
    nfts.push(nft);
}

// Create a function that will print all of your NFTs metadata to the console
function listNFTs() {
    for (let i = 0; i < nfts.length; i++) {
        console.log("NFT " + (i + 1) + ":");
        console.log("Name: " + nfts[i].name);
        console.log("Creator: " + nfts[i].creator);
        console.log("Value: $" + nfts[i].value); // Display value in USD
        console.log("---------------------");
    }
}

// Print the total number of NFTs we have minted to the console
function getTotalSupply() {
    return nfts.length;
}

// Example calls to your functions with renamed NFTs and values in USD
mintNFT("Artistic Vision", "Artist1", 100);
mintNFT("Unique Collectible", "Artist2", 200);
mintNFT("Epic Virtual Asset", "Artist3", 300);

// Listing NFTs and getting total supply
listNFTs();
console.log("Total NFTs minted: " + getTotalSupply());
